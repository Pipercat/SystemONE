# SmartSortierer Pro - Environment Configuration
# Copy to .env and adjust values

# === SECURITY ===
SS_API_KEY=change-this-to-a-secure-random-key-min-32-chars
SS_SECRET_KEY=another-secure-random-key-for-jwt-etc

# === STORAGE ===
SS_STORAGE_ROOT=/mnt/nas/smartsortierer
SS_MAX_UPLOAD_SIZE_MB=100

# === DATABASE ===
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=smartsortierer
POSTGRES_USER=ssuser
POSTGRES_PASSWORD=change-this-secure-db-password

# === REDIS ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change-this-secure-redis-password

# === QDRANT ===
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=smartsortierer_docs

# === OLLAMA ===
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_MODEL_CHAT=llama3.2:3b
OLLAMA_MODEL_EMBED=nomic-embed-text

# === HOME ASSISTANT (Optional) ===
HA_ENABLED=false
HA_URL=http://homeassistant.local:8123
HA_TOKEN=your-long-lived-access-token
HA_CONFIRMATION_MODE=true
HA_ALLOWED_DOMAINS=light,switch,scene

# === N8N (Optional) ===
N8N_ENABLED=false
N8N_POSTGRES_PASSWORD=change-this-n8n-db-password
N8N_ENCRYPTION_KEY=change-this-n8n-encryption-key

# === APPLICATION ===
API_PORT=8000
NGINX_PORT=80
LOG_LEVEL=INFO
ENVIRONMENT=production
